@model SubtitlesManagementSystem.Web.Models.Genres.ViewModels.DeleteGenreViewModel

@{
    ViewData["Title"] = "Delete";
}

<section class="meetings-page" id="meetings" style="min-height: 100vh;">
    <div class="container">
        <div class="row">
            @if (TempData["GenreErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["GenreErrorMessage"]
                </div>
            }
            <div>
                <dl class="row bg-secondary">
                    <dt class="col-sm-2 text-dark bg-light">
                        @Html.DisplayNameFor(genre => genre.Name)
                    </dt>
                    <dd class="col-sm-10 text-white">
                        @Html.DisplayFor(genre => genre.Name)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="submit" value="Delete" class="btn btn-danger my-5" />
                    <a asp-action="Index" class="btn btn-primary my-5 ml-5">Back to Genres List</a>
                </form>
            </div>
        </div>
    </div>
</section>
