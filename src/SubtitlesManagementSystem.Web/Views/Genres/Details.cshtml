@model SubtitlesManagementSystem.Web.Models.Genres.ViewModels.GenreDetailsViewModel

<section class="meetings-page" style="min-height: 100vh;">
    <div class="container">
        <div class="row">
            <dl class="row bg-secondary" style="padding-left: 0;">
                <dt class="col-sm-2 text-white bg-info" style="font-weight: 400">
                    @Html.DisplayNameFor(genre => genre.Name)
                </dt>
                <dd class="col-sm-10 text-white">
                    @Html.DisplayFor(genre => genre.Name)
                </dd>
                <dt class="col-sm-2 text-white bg-info" style="font-weight: 400">
                    @Html.DisplayNameFor(genre => genre.CreatedOn)
                </dt>
                <dd class="col-sm-10 text-white">
                    @Html.DisplayFor(genre => genre.CreatedOn)
                </dd>
                <dt class="col-sm-2 text-white bg-info" style="font-weight: 400">
                    @Html.DisplayNameFor(genre => genre.CreatedBy)
                </dt>
                <dd class="col-sm-10 text-white">
                    @Html.DisplayFor(genre => genre.CreatedBy)
                </dd>
                <dt class="col-sm-2 text-white bg-info" style="font-weight: 400">
                    @Html.DisplayNameFor(genre => genre.ModifiedOn)
                </dt>
                <dd class="col-sm-10 text-white">
                    @Html.DisplayFor(genre => genre.ModifiedOn)
                </dd>
                <dt class="col-sm-2 text-white bg-info" style="font-weight: 400">
                    @Html.DisplayNameFor(genre => genre.ModifiedBy)
                </dt>
                <dd class="col-sm-10 text-white">
                    @Html.DisplayFor(genre => genre.ModifiedBy)
                </dd>
                <dt class="col-sm-2 text-white bg-info" style="font-weight: 400">
                    Related Film Productions
                </dt>
                <dd class="col-sm-10 text-white">
                    @if (Model.RelatedFilmProductions.Count() > 0)
                    {
                        <table class="table table-striped table-light table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Duration</th>
                                    <th>Release Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var filmProduction in Model.RelatedFilmProductions)
                                {
                                    <tr>
                                        <td>
                                            @filmProduction.Title
                                        </td>
                                        <td>
                                            @filmProduction.Duration
                                        </td>
                                        <td>
                                            @filmProduction.ReleaseDate.ToShortDateString()
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div>No Related Film Productions</div>
                    }
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-primary my-5">Back to List</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-dark my-5">Edit Genre</a>
        </div>
    </div>
</section>
