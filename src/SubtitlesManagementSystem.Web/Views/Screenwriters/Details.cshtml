@model SubtitlesManagementSystem.Web.Models.Screenwriters.ViewModels.ScreenwriterDetailsViewModel

@{
    ViewData["Title"] = "Screenwriter Details";
}

<h3>@ViewData["Title"]</h3>

<section class="meetings-page" style="min-height: 100vh;">
    <div class="container">
        <div class="row">
            <dl class="row bg-secondary" style="padding-left: 0;">
                <dt class="col-sm-2 text-white bg-info" style="font-weight: 400">
                    @Html.DisplayNameFor(screenwriter => screenwriter.FirstName)
                </dt>
                <dd class="col-sm-10 text-white">
                    @Html.DisplayFor(screenwriter => screenwriter.FirstName)
                </dd>
                <dt class="col-sm-2 text-white bg-info" style="font-weight: 400">
                    @Html.DisplayNameFor(screenwriter => screenwriter.LastName)
                </dt>
                <dd class="col-sm-10 text-white">
                    @Html.DisplayFor(screenwriter => screenwriter.LastName)
                </dd>
                <dt class="col-sm-2 text-white bg-info" style="font-weight: 400">
                    @Html.DisplayNameFor(screenwriter => screenwriter.CreatedOn)
                </dt>
                <dd class="col-sm-10 text-white">
                    @Html.DisplayFor(screenwriter => screenwriter.CreatedOn)
                </dd>
                <dt class="col-sm-2 text-white bg-info" style="font-weight: 400">
                    @Html.DisplayNameFor(screenwriter => screenwriter.CreatedBy)
                </dt>
                <dd class="col-sm-10 text-white">
                    @Html.DisplayFor(screenwriter => screenwriter.CreatedBy)
                </dd>
                <dt class="col-sm-2 text-white bg-info" style="font-weight: 400">
                    @Html.DisplayNameFor(screenwriter => screenwriter.ModifiedOn)
                </dt>
                <dd class="col-sm-10 text-white">
                    @Html.DisplayFor(screenwriter => screenwriter.ModifiedOn)
                </dd>
                <dt class="col-sm-2 text-white bg-info" style="font-weight: 400">
                    @Html.DisplayNameFor(screenwriter => screenwriter.ModifiedBy)
                </dt>
                <dd class="col-sm-10 text-white">
                    @Html.DisplayFor(screenwriter => screenwriter.ModifiedBy)
                </dd>
                <dt class="col-sm-2 text-white bg-info" style="font-weight: 400">
                    Related Film Productions
                </dt>
                <dd class="col-sm-10 text-white">
                    @if (Model.RelatedFilmProductions.Count() > 0)
                    {
                        <table class="table table-striped table-light table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Duration</th>
                                    <th>Release Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var filmProduction in Model.RelatedFilmProductions)
                                {
                                    <tr>
                                        <td>
                                            @filmProduction.Title
                                        </td>
                                        <td>
                                            @filmProduction.Duration
                                        </td>
                                        <td>
                                            @filmProduction.ReleaseDate.ToShortDateString()
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div>No Related Film Productions</div>
                    }
                </dd>
            </dl>
            <div>
                <a asp-action="Index" class="btn btn-primary my-5">Back To Screenwriters List</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-dark my-5">Edit Screenwriter</a>
            </div>
        </div>
    </div>
</section>