@model SubtitlesManagementSystem.Web.Models.Subtitles.BindingModels.CreateSubtitlesBindingModel

<section class="contact-us" id="contact">
    @if (TempData["SubtitlesErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["SubtitlesErrorMessage"]
        </div>
    }
    <div class="container">
        <div class="row">
            <div class="col-12 align-self-center">
                <div class="row justify-content-center mb-5">
                    <div class="col-lg-6">
                        <form id="contact" class="border border-dark" asp-action="Create" method="post">
                            <h2>@ViewData["Title"]</h2>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating mt-3">
                                <fieldset>
                                    <label class="control-label text-dark">Film Production</label>
                                    <select asp-for="FilmProductionId" class="form-control" asp-items="ViewBag.FilmProductionByTitle"></select>
                                </fieldset>
                            </div>
                            <div class="form-floating mt-3">
                                <fieldset>
                                    <label class="col-form-label text-dark">Select Multiple Files</label>
                                    <input asp-for="Files" type="file" accept=".srt" class="form-control" multiple />
                                    <span asp-validation-for="Files" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="my-3">
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
                            </div>
                        </form>                            
                        <div>
                            <a asp-action="Index" class="btn btn-secondary mt-5">Back to Subtitles List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
