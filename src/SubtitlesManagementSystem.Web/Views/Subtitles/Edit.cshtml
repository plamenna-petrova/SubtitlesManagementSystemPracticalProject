@model SubtitlesManagementSystem.Web.Models.Subtitles.BindingModels.EditSubtitlesBindingModel

@{
    ViewData["Title"] = "Edit Subtitles";
}

<section class="contact-us" id="contact">
    @if (TempData["SubtitlesErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["SubtitlesErrorMessage"]
        </div>
    }
    <div class="container">
        <div class="row">
            <div class="col-12 align-self-center">
                <div class="row justify-content-center mb-5">
                    <div class="col-lg-6">
                        <form id="contact" class="border border-dark" asp-action="Edit" method="post" enctype="multipart/form-data">
                            <h2>@ViewData["Title"]</h2>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating mt-3">
                                <fieldset>
                                    <label class="col-form-label">Select Multiple Files</label>
                                    <input asp-for="Files" type="file" accept=".srt" class="form-control" multiple />
                                    <span asp-validation-for="Files" class="text-danger"></span>
                                </fieldset>
                            </div>
                            @if (ViewBag.ExistingSubtitlesFilesNames != null)
                            {
                                <span>Already uploaded files : </span>

                                <ul>
                                    @foreach (var existingSubtitlesFileName in ViewBag.ExistingSubtitlesFilesNames)
                                    {
                                        <li>@existingSubtitlesFileName</li>
                                    }
                                </ul>
                            }
                            <input type="hidden" asp-for="Id" />
                            <div class="my-3">
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
                            </div>
                        </form>                            
                        <div>
                            <a asp-action="Index" class="btn btn-secondary mt-5">Back to Subtitles List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
