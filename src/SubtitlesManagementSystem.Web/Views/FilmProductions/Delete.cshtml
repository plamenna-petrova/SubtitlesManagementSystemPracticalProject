@model SubtitlesManagementSystem.Web.Models.FilmProductions.ViewModels.DeleteFilmProductionViewModel

<section class="meetings-page" id="meetings" style="min-height: 100vh;">
    <div class="container">
        <div class="row">
            @if (TempData["FilmProductionErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["FilmProductionErrorMessage"]
                </div>
            }
            <div>
                <dl class="row bg-secondary">
                    <dt class="col-sm-2 text-white bg-info font-weight-normal">
                        @Html.DisplayNameFor(filmProduction => filmProduction.Title)
                    </dt>
                    <dd class="col-sm-10 text-white">
                        @Html.DisplayFor(filmProduction => filmProduction.Title)
                    </dd>
                    <dt class="col-sm-2 text-white bg-info font-weight-normal">
                        @Html.DisplayNameFor(filmProduction => filmProduction.ReleaseDate)
                    </dt>
                    <dd class="col-sm-10 text-white">
                        @Model.ReleaseDate.ToShortDateString()
                    </dd>
                    <dt class="col-sm-2 text-white bg-info font-weight-normal">
                        @Html.DisplayNameFor(filmProduction => filmProduction.ImageName)
                    </dt>
                    <dd class="col-sm-10 text-white">
                        @if (Model.ImageName != null)
                        {
                            <img src="~/images/film-productions/@Model.ImageName"
                                 class="rounded-square"
                                 asp-append-version="true" style="width: 200px; height: 200px;" />
                            <br />
                            <span><a href="~/images/film-productions/@Model.ImageName" style="color: white;">@Model.ImageName</a></span>
                        }
                        else
                        {
                            <p>No Image</p>
                        }
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="submit" value="Delete" class="btn btn-danger my-5" />
                    <a asp-action="Index" class="btn btn-primary my-5 ml-5">Back to Film Productions List</a>
                </form>
            </div>
        </div>
    </div>
</section>
